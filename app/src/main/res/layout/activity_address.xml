<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.admin.exe.shop.ui.activity.AddressActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/app_style"
        >

        <ImageView
            android:id="@id/title_left"
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/common_title_bar_back_white_normal"
            android:textColor="#fff"/>

        <TextView
            android:id="@id/title_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="管理收货地址"
            android:textColor="#fff"
            android:textSize="20sp"/>


    </RelativeLayout>

    <ListView
        android:id="@+id/lv_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_submit"
        android:layout_below="@+id/rl_title"
        android:divider="@null"
        android:overScrollMode="never"
        android:scrollbars="none">
    </ListView>

    <LinearLayout
        android:id="@+id/ll_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="您尚未拥有任何收货地址"
            android:textColor="@color/app_style"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_submit"
        style="@style/bt_doNet"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:text="添加新地址"/>
</RelativeLayout>
