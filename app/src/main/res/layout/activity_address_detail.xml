<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.admin.exe.shop.ui.activity.AddressDetailActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_title"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/app_style"
        >

        <ImageView
            android:id="@id/title_left"
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/common_title_bar_back_white_normal"
            android:textColor="#fff"/>

        <TextView
            android:id="@id/title_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="xxxx"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <TextView
            android:id="@id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="23dp"
            android:clickable="true"
            android:gravity="center"
            android:text="xxx"
            android:textColor="#fff"
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人："
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/edit_rname"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:background="@null"
            android:textColor="@color/tv_gray"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话："
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/edit_rphone"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/tv_gray"
            android:textSize="13sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址："
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/ll_raddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_raddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:text="请选择"
                android:textColor="@color/tv_gray"
                android:textSize="13sp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="left|top"
        android:hint="详细地址(30字以内)"
        android:id="@+id/edit_street"
        android:padding="16dp"
        android:maxLength="30"
        android:textColor="@color/tv_gray"
        android:textSize="13sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/bt_submit"
        style="@style/bt_doNet"
        android:layout_margin="10dp"
        android:text="删除地址"/>
</LinearLayout>
