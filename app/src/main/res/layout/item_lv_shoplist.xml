<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgv_list_limit_activity"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@mipmap/ic_launcher"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/tv_title_limit_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgv_list_limit_activity"
            android:maxLines="2"
            android:paddingBottom="8dp"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textSize="17sp"/>

        <com.admin.exe.shop.ui.views.OldPriceTV
            android:id="@+id/tv_oldprice_limit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_limit_activity"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/imgv_list_limit_activity"
            android:text="$9809812312"/>

        <TextView
            android:id="@+id/tv_salenum"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_title_limit_activity"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xsqg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_oldprice_limit_activity"
            android:layout_toRightOf="@+id/imgv_list_limit_activity"
            android:text="限时抢购:"
            android:textColor="@color/red"
            android:layout_marginRight="16dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_newprice_limit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_oldprice_limit_activity"
            android:layout_toRightOf="@id/xsqg"
            android:text="$890891823"
            android:textColor="#f00"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_time_limit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/xsqg"
            android:layout_toRightOf="@id/imgv_list_limit_activity"
            android:text=""
            android:textSize="17sp"/>


    </RelativeLayout>




</RelativeLayout>