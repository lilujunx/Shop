<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_head"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/red">

    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/rg_vp_home"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/vp_head"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="@dimen/rb_vp_magin"
            android:layout_marginRight="@dimen/rb_vp_magin"
            android:background="@drawable/slide_adv_selector"
            android:button="@null"/>

        <RadioButton
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="@dimen/rb_vp_magin"
            android:layout_marginRight="@dimen/rb_vp_magin"
            android:background="@drawable/slide_adv_selector"
            android:button="@null"/>

        <RadioButton
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="@dimen/rb_vp_magin"
            android:layout_marginRight="@dimen/rb_vp_magin"
            android:background="@drawable/slide_adv_selector"
            android:button="@null"/>

        <RadioButton
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="@dimen/rb_vp_magin"
            android:layout_marginRight="@dimen/rb_vp_magin"
            android:background="@drawable/slide_adv_selector"
            android:button="@null"/>

        <RadioButton
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="@dimen/rb_vp_magin"
            android:layout_marginRight="@dimen/rb_vp_magin"
            android:background="@drawable/slide_adv_selector"
            android:button="@null"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/ll_sclass"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/vp_head"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="商品分类"
            android:textColor="@color/tv_black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/tv_black"
            android:textSize="11sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll"
        android:background="@color/gray_line"/>

    <com.example.library.view.MeasureGridView
        android:id="@+id/gv_home"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/ll"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:numColumns="3"
        android:overScrollMode="never"
        android:scrollbars="none">

    </com.example.library.view.MeasureGridView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/gv_home"
        android:background="@color/gray_line"/>


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/line"
        android:layout_marginTop="2dp"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/line1"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="品牌推荐"
            android:textColor="@color/tv_black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textColor="@color/tv_black"
            android:textSize="11sp"/>
    </LinearLayout>

    <com.example.library.view.MeasureGridView
        android:id="@+id/gv_br"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/ll1"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:numColumns="4"
        android:overScrollMode="never"
        android:scrollbars="none">

    </com.example.library.view.MeasureGridView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/gv_br"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="买家好评"
            android:textColor="@color/tv_black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textColor="@color/tv_black"
            android:textSize="11sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/hor"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="限时抢购"
            android:textColor="@color/tv_black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/tv_black"
            android:textSize="11sp"/>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/hor"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_below="@+id/ll_sclass"
        android:fillViewport="true"
        android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_sclass0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgv_sclass0"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_sclass0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="xxxx"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/red"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_sclass1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgv_sclass1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_sclass1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="xxxx"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/red"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_sclass2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgv_sclass2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_sclass2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="xxxx"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/red"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_sclass3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgv_sclass3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_sclass3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="xxxx"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/red"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_sclass4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgv_sclass4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_sclass4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="xxxx"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/red"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_sclass5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgv_sclass5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_sclass5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="xxxx"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/red"/>
        </LinearLayout>

    </LinearLayout>


    </HorizontalScrollView>
</RelativeLayout>